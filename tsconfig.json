{
  "compilerOptions": {
    "target": "esNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "baseUrl": "lib",
    "declaration": true,
    "noEmit": true,
    "paths": {
      "@lib/*": ["*"]
    },
    "typeRoots": ["lib/virtual.d.ts", "node_modules/@types"]
  },
  "include": ["lib", ".eslintrc.cjs", "lib/virtual.d.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "dist",
    "node_modules"
  ]
}
